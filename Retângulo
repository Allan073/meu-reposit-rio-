public class Retangulo {

    private double lado;
    private double base;

    public Retangulo(double l, double b){
        lado = l;
        base = b;
    }

    public Retangulo(){
        
    }

    public double getLado(){
        return lado;
    }
    
    public double getBase(){
        return base;
    }

    //Calculo da area
    public double getArea(){
        return lado*base;
    }

    //Calculo do perimetro
    public double getPerimetro(){
        return (lado*2)+(base*2);
    }
    
}
